<%= form_with url: root_url, method: :get  do |f|  %>
    <%= f.label :from, class: "font-bold"  %>
    <%= f.collection_select :origin, Airport.all, :id, :code  %>

    <br /><br />

    <%= f.label :to, class: "font-bold" %>
    <%= f.collection_select :destination, Airport.all, :id, :code  %>

    <br /><br />

    <%= f.label :passengers, class: "font-bold"  %>
    <%= f.select :passengers, (1..4).to_a  %>

    <br /><br />

    <%= f.label :date, class: "font-bold"  %>
    <%= date_field_tag :takeoff %>

    <br /><br />

    <%= f.submit "Search", class: "px-5 py-2 bg-blue-600 text-white" %>
<% end  %>
