<header class="flex justify-center mt-8 text-lg font-bold">
    <h1><%= link_to "ONE WAY FLIGHTS", root_url, class: "text-white text-opacity-90 text-2xl"  %></h1>
</header>
<main class="p-3 h-screen">
    <%= render "search" %>
    <% if @flights  %>
        <div class="bg-white rounded w-1/2 m-auto p-1 mt-9 shadow-lg">
            <table class="border bg-white table-auto w-full">
                <tr>
                    <thead>
                        <tr>
                            <th class="underline text-left px-4 py-2">Origin</th>
                            <th class="underline text-left px-4 py-2">Destination</th>
                            <th class="underline text-left px-4 py-2">Takeoff</th>
                            <th class="underline text-left px-4 py-2">Flight Duration</th>
                        </tr>
                    </thead>
                </tr>
                <%= render @flights  %>
            </table>
        </div>
    <% end %>
</main>

